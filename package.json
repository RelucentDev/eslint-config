{
  "name": "@relucent.dev/eslint-config",
  "version": "3.0.1",
  "type": "module",
  "description": "Relucent's Shared ESLint Config",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/RelucentDev/eslint-config.git",
    "directory": "packages/eslint-config"
  },
  "homepage": "https://github.com/RelucentDev/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/RelucentDev/eslint-config/issues"
  },
  "author": "Relucent Ltd <hello@relucent.dev>",
  "license": "MIT",
  "private": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/",
    "src/"
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "relucent"
  ],
  "scripts": {
    "build": "npm-run-all tsup",
    "changeset": "changeset",
    "lint": "npm-run-all typecheck publint prettier",
    "lint:dev": "npm-run-all typecheck publint prettier",
    "prettier": "prettier --check .",
    "prettier:dev": "prettier --write .",
    "publint": "publint",
    "release": "changeset publish",
    "tsup": "tsup --entry src/index.ts --entry src/typescript.ts --format cjs,esm --minify --dts --sourcemap",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": ">=8.54.0",
    "typescript": ">=5.3.2"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.4.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "globals": "^15.1.0",
    "typescript-eslint": "^7.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@relucent.dev/prettier-config": "^2.1.11",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.12.8",
    "eslint": "^8.54.0",
    "npm-run-all": "^4.1.5",
    "publint": "^0.2.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
